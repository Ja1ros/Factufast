<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.3.1/cosmo/bootstrap.min.css">
  <link rel="stylesheet" href="css/main.css">
  <title>Datos para Análisis</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container p-2">
      <a class="navbar-brand" href="/"><h1>Análisis de datos</h1></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Regresar</a>
          </li>
        </ul>
      </div>
    </div>
  </nav> 
  <div class="container p-4">
    <form method="GET" action="/datos" class="card card-body">
      <div class="form-group">
        <label for="startDate">Fecha de inicio:</label>
        <input type="date" id="startDate" name="startDate" required>
        <label for="endDate">Fecha de fin:</label>
        <input type="date" id="endDate" name="endDate" required>
      </div>
      <input type="submit" value="Generar" class="btn btn-primary"><br>
    </form>
    <div class="container p-8">
      <div>
        <% if (Object.keys(totalPorCategoria).length > 0) { %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Categoría</th>
                <th>Total</th>
                <th>Facturas</th>
              </tr>
            </thead>
            <tbody>
              <% Object.keys(totalPorCategoria).forEach(categoria => { %>
                <tr>
                  <td><%= categoria %></td>
                  <td>$<%= totalPorCategoria[categoria].total.toFixed(2) %></td>
                  <td><%= totalPorCategoria[categoria].count %></td>
                </tr>
              <% }) %>

            <tr>
              <td><strong>Total General</strong></td>
              <td>$<%= totalGeneral.toFixed(2) %></td>
              <td></td>
            </tr>

            </tbody>
          </table>
          
        <% } else { %>
          <p>No se encontraron facturas en el rango de fechas seleccionado.</p>
        <% } %>
      </div>
      
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
